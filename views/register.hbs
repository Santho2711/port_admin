    <div class="auth-box row">
        <div class="col-12 bg-white">
            <div class="p-3">
                <h2 class="mt-3 text-center">Sign In</h2>
                <p class="text-center">Enter your email address and password to access admin panel.</p>
                {{#if message}}
                <div class="alert alert-danger alert-dismissible alert-alt fade show">
                    <button type="button" class="close h-100" data-dismiss="alert" aria-label="Close"><span><i
                                class="mdi mdi-close"></i></span>
                    </button>
                    <strong>Error!</strong> Message Sending failed.
                </div>
                {{/if}}
                <form action="/register" class="mt-4" method="post">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group mb-3">
                                <label class="form-label text-dark" for="email">Username</label>
                                <input class="form-control" type="text" placeholder="enter your username"
                                    name="username">
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label text-dark" for="email">Usermail</label>
                                <input class="form-control" id="mail" type="text" placeholder="enter your usermail"
                                    name="email">
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group mb-3">
                                <label class="form-label text-dark" for="password">Password</label>
                                <input class="form-control" id="pwd" type="password" placeholder="enter your password"
                                    name="password">
                            </div>
                        </div>
                        <div class="col-lg-12 text-center">
                            <button type="submit" class="btn w-100 btn-primary">Sign In</button>
                        </div>
                        <div class="col-lg-12 text-center mt-5">
                            Don't have an account? <a href="/login" class="text-primary">Sign Up</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>